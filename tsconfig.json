{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable",
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "noUncheckedIndexedAccess": true,
    /* Linting */
    "strict": true,
    /* JSX */
    "jsx": "preserve",
    "paths": {
      "jinx": [
        "./packages/jinx"
      ]
    }
  },
  "include": [
    "app",
    "packages"
  ]
}